{% extends 'accueil/index.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}
<div class="container mt-5">
      <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6 tm-block-col">
          <div class="tm-bg-primary-dark tm-block tm-block-product-categories">
            <h2 class="tm-block-title">Liste des categories</h2>
            <div class="tm-product-table-container">
              <table class="table tm-table-small tm-product-table">
              <thead>
                  <tr>
                    <th scope="col">#id</th>
                    <th scope="col">Nom</th>
                  </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                  <tr>
                    <td class="tm-product-name">{{ categorie.id }}</td>
                    <td class="tm-product-name">{{ categorie.nomCat }}</td>
                  </tr>
                {% endfor %}
                </tbody>
                </table>
          </div>
          
        </div>
      </div>
      <div class="ol-sm-12 col-md-12 col-lg-6 col-xl-6 tm-block-col">
          <div class="tm-bg-primary-dark tm-block tm-block-products">
             <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                        <h2 class="tm-block-title d-inline-block">Ajouter un produit</h2>
                </div>     
              </div>
              <div class="col-xl-12 col-lg-6 col-md-12 mx-auto mb-4">
                <div class="row">
                        <div class="form-group mb-3 col-xs-12 col-sm-12">
                          <label
                            for="categorie"
                            >Nom Categorie
                          </label>
                          <input
                            id="categorie"
                            name="categorie"
                            type="text"
                            class="form-control validate"
                            required
                          />
                        </div>
                </div>   
              </div>
              <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-block text-uppercase">{{ button_label|default('Ajouter') }}</button>
              </div>
            </form>
          </div>
          </div>
         
        </div>
        </div>
    </div> 
</div>
{% endblock %}
