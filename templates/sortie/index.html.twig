{% extends 'accueil/index.html.twig' %}

{% block title %}Hello SortieController!{% endblock %}

{% block body %}
<div class="container mt-5">
      <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6 tm-block-col">
          <div class="tm-bg-primary-dark tm-block tm-block-product-categories">
            <h2 class="tm-block-title">Liste des sorties</h2>
            <div class="tm-product-table-container">
              <table class="table tm-table-small tm-product-table">
              <thead>
                  <tr>
                    <th scope="col">#id</th>
                    <th scope="col">Quantite</th>
                    <th scope="col">Prix unitaire</th>
                    <th scope="col">Date</th>
                  </tr>
                </thead>
                <tbody>
                {% for sortie in sorties %}
                  <tr>
                    <td class="tm-product-name">{{ sortie.id }}</td>
                    <td class="tm-product-name">{{ sortie.qteS }}</td>
                    <td class="tm-product-name">{{ sortie.puS }}</td>
                    <td class="tm-product-name">{{ sortie.dateS|date("d/m/Y") }}</td>
                    {% else %}
                    <td class="tm-product-name">Aucune sortie enregistree</td>
                  </tr>
                {% endfor %}
                </tbody>
                </table>
          </div>
          
        </div>
      </div>
      <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6 tm-block-col">
          <div class="tm-bg-primary-dark tm-block tm-block-products">
             <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                        <h2 class="tm-block-title d-inline-block">Nouvelle sortie</h2>
                </div>     
              </div>
              <div class="col-xl-12 col-lg-6 col-md-12 mx-auto mb-4">
                
                <form action="" class="tm-edit-product-form">
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Prix unitaire
                    </label>
                    <input
                      id="name"
                      name="qteS"
                      type="text"
                      class="form-control validate"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label
                      for="category"
                      >Produit</label
                    >
                    <select
                      class="custom-select tm-select-accounts"
                      id="produit"
                    >
                      <option selected>Selectionner un produit</option>
                    {% for produit in produits %}
                      <option>{{ produit.libelle }}</option>
                    {% else %}
                      <option >Aucun produit enregistree</option>
                    {% endfor %}
                    </select>
                  </div>
                <div class="row">
                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <label
                            for="expire_date"
                            >Date
                          </label>
                          <input
                            id="expire_date"
                            name="dateS"
                            type="text"
                            class="form-control validate"
                            data-large-mode="true"
                          />
                        </div>
                        <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <label
                            for="stock"
                            >Quantite
                          </label>
                          <input
                            id="stock"
                            name="stock"
                            type="text"
                            class="form-control validate"
                            required
                          />
                        </div> 
                </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block text-uppercase">Ajouter</button>
              </div>
            </form>
            </div>
                </div>   
              </div>
            </form>
          </div>
          </div>
         
        </div>
        </div>
    </div> 
</div>
{% endblock %}
